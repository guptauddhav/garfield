=	simple_form_for @vendor,  html: {multipart: true } do |f|
	- if @vendor.errors.any? 
		#errors 
			%h2 
			= pluralize(@vendor.errors.count, "errors") 
			prevented this vendor from saving
			%ul 
				- @vendor.errors.full.messages.each do |msg|
					%l1 = msg  
	

	.form-group
		%strong Upload Image
		%p 
		= f.file_field :image, input_html: {class: 'form-control'}

	.form-group
		= f.input :title, input_html: {class: 'form-control'}

	.form-group
		= f.input :description, input_html: {class: 'form-control'}

	.form-group
		= f.input :tag_list, label: 'Tags (seperated by commas)', input_html: {class: 'form-control'}
		
	= f.button :submit, class: "btn btn-primary"
