= simple_form_for [@pictureable, @picture],  html: {multipart: true } do |f|
	- if @picture.errors.any? 
		#errors 
			%h2 
			= pluralize(@picture.errors.count, "errors") 
			prevented this picture from saving
			%ul 
				- @picture.errors.full.messages.each do |msg|
					%l1 = msg  
	.form-group
		%strong Upload Image
		%p 
		= f.file_field :image, input_html: {class: 'form-control'}
		
	= f.button :submit, class: "btn btn-primary"