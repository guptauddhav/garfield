= simple_form_for @incident,  html: {multipart: true } do |f|
	- if @incident.errors.any? 
		#errors 
			%h2 
			= pluralize(@incident.errors.count, "errors") 
			prevented this Pin from saving
			%ul 
				- @incident.errors.full.messages.each do |msg|
					%l1 = msg  
	

	.form-group
		= f.input :title, input_html: {class: 'form-control'}

	.form-group
		= f.input :description, input_html: {class: 'form-control'}

	.form-group
		= f.input :tag_list, label: 'Tags (seperated by commas)', input_html: {class: 'form-control'}
		
	= f.button :submit, class: "btn btn-primary"
